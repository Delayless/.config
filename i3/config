#PHONES SOUND:
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle # mute sound
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-mute 1 toggle #mute sound volume

#HDMI SOUND:
bindsym $mod+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym $mod+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym $mod+XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym $mod+Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-mute 0 toggle  #mute sound volume

# setting Volume, device 0 maybe device 1.
bindsym $mod+F1 exec --no-startup-id pactl set-sink-mute 1 toggle
bindsym $mod+F2 exec --no-startup-id pactl set-sink-volume 1 -10%
bindsym $mod+F3 exec --no-startup-id pactl set-sink-volume 1 +10%

